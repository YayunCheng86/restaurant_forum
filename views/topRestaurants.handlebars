<h1>Top 10 人氣餐廳</h1>
<hr />
<div class="d-flex flex-column align-items-center" style="text-align: center;">
    {{#each restaurants}}
    <div class="row mb-2 justify-content-between align-items-center" style="width: 850px; height: 250px; border: 2px solid gray;">

        <div class="img col-2">
            <a href="/restaurants/{{this.id}}">
                <img class="" src="{{this.image}}" width="140px" height="140px">
            </a>
        </div>
        
        <div class="col-9 d-flex flex-column align-items-start">
            <h4>{{this.name}}</h4>
            <span class="badge badge-secondary" style="width: 90px; height: 30px;">收藏數：{{this.FavoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>
            <div class="d-flex">
                <a href="/restaurants/{{this.id}}">
                    <button type="button" class="btn btn-primary mr-2" style="width: 120px; height: 48px;">Show</button>
                </a>
        
                {{#if this.isFavorited }}
                <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
                        type="submit" class="btn btn-danger" style="width: 120px; height: 48px;">移除最愛</button></form>
                {{else}}
                <form action="/favorite/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
                        class="btn btn-primary" style="width: 120px; height: 48px;">加到最愛</button></form>
                {{/if}}
            </div>
        </div>

    </div>
    {{/each}}
</div>